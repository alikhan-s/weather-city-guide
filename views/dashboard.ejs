<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>City: <%= weather.city %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"/>
    <link rel="stylesheet" href="/css/style.css">
    <style>
      #map { height: 300px; width: 100%; border-radius: 10px; }
      .weather-icon { width: 100px; height: 100px; }
    </style>
</head>
<body class="bg-light">

<nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4 shadow">
    <div class="container">
        <a class="navbar-brand fw-bold" href="/">City Guide</a>
        <a href="/" class="btn btn-outline-light btn-sm">‚Üê New Search</a>
    </div>
</nav>

<div class="container mb-5">

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card border-0 shadow-sm overflow-hidden text-white bg-dark header-card" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body p-5 d-flex flex-column flex-md-row align-items-center justify-content-between">
                    <div>
                        <h2 class="display-4 fw-bold"><%= weather.city %>, <%= weather.country %></h2>
                        <p class="lead text-white-50"><%= weather.description.charAt(0).toUpperCase() + weather.description.slice(1) %></p>
                        <h1 class="display-1 fw-bold"><%= Math.round(weather.temp) %>¬∞C</h1>
                    </div>
                    <div class="text-center">
                        <img src="http://openweathermap.org/img/wn/<%= weather.icon %>@4x.png" alt="Icon" class="weather-icon-lg">
                        <p>Feels like <%= Math.round(weather.feels_like) %>¬∞C</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-4 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white fw-bold">Weather details</div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Humidity</span> <strong><%= weather.humidity %> %</strong>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Pressure</span> <strong><%= weather.pressure %> hPa</strong>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Wind speed</span> <strong><%= weather.wind_speed %> m/s</strong>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Rain (3 hours)</span> <strong><%= weather.rain %> mm</strong>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Coordinates</span> <small><%= weather.coordinates.lat %>, <%= weather.coordinates.lon %></small>
                    </li>
                </ul>
            </div>
        </div>

        <div class="col-lg-8 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white fw-bold">Area Map</div>
                <div class="card-body p-0">
                    <div id="map"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <h4 class="mb-3 text-secondary">üìç Interesting places (2GIS)</h4>
            <div class="list-group shadow-sm">
                <% if (places && places.length > 0) { %>
                    <% places.forEach(function(place) { %>
                        <div class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1 text-primary"><%= place.name %></h5>
                            </div>
                            <p class="mb-1 text-muted small"><%= place.address_name || 'Address not specified' %></p>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="alert alert-warning">No places found in this city.</div>
                <% } %>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <h4 class="mb-3 text-secondary">üì∞ Latest News</h4>
            <div class="row g-3">
                <% if (news && news.length > 0) { %>
                    <% news.forEach(function(article) { %>
                        <div class="col-12">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <h6 class="card-title"><a href="<%= article.url %>" target="_blank" class="text-decoration-none text-dark"><%= article.title %></a></h6>
                                    <p class="card-text small text-muted">
                                        <%= article.description ? article.description.substring(0, 100) + '...' : '' %>
                                    </p>
                                    <small class="text-muted"><%= new Date(article.publishedAt).toLocaleDateString() %></small>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="alert alert-warning">No news found for this city.</div>
                <% } %>
            </div>
        </div>
    </div>

</div>

<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script>
  var map = L.map('map').setView([<%= weather.coordinates.lat %>, <%= weather.coordinates.lon %>], 13);

  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '¬© OpenStreetMap contributors'
  }).addTo(map);

  L.marker([<%= weather.coordinates.lat %>, <%= weather.coordinates.lon %>]).addTo(map)
    .bindPopup('<b><%= weather.city %></b><br>City center.')
    .openPopup();
</script>
</body>
</html>